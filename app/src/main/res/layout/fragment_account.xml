<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".menu.AccountFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_top"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/card"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/logo"
                android:layout_centerVertical="true"
                android:src="@drawable/logo_gens"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/logo"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:id="@+id/name"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/phone"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:textColor="@color/Primary"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:id="@+id/saldo"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginHorizontal="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:id="@+id/about"
                android:background="@drawable/form_control"
                android:text="Tentang Aplikasi"
                android:drawableEnd="@drawable/next"
                android:textColor="@color/PrimaryDark"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:id="@+id/term"
                android:background="@drawable/form_control"
                android:text="Syarat dan Ketentuan"
                android:drawableEnd="@drawable/next"
                android:textColor="@color/PrimaryDark"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:id="@+id/privacy"
                android:background="@drawable/form_control"
                android:text="Kebijakan Privasi"
                android:drawableEnd="@drawable/next"
                android:textColor="@color/PrimaryDark"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:id="@+id/support"
                android:background="@drawable/form_control"
                android:text="Informasi dan Bantuan"
                android:drawableEnd="@drawable/next"
                android:textColor="@color/PrimaryDark"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:background="@drawable/form_control"
                android:text="Mutasi Saldo"
                android:id="@+id/mutasi"
                android:drawableEnd="@drawable/next"
                android:textColor="@color/PrimaryDark"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_toast_error"
                android:text="Keluar"
                android:id="@+id/logout"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>